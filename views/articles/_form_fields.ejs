<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">  
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="author">Author</label>
    <input value="<%= article.author %>" type="text" name="author" id="author" class="form-control">
</div>
<div class="form-group">
    <label for="category">Category</label>
    <input value="<%= article.category %>" type="text" name="category" id="category" class="form-control">
</div>
<div class="form-group">
    <label for="tags">Tags (comma-separated)</label>
    <input value="<%= article.tags ? article.tags.join(', ') : '' %>" type="text" name="tags" id="tags" class="form-control">
</div>
<div class="form-group">
    <label for="featuredImage">Featured Image URL</label>
    <input value="<%= article.featuredImage %>" type="url" name="featuredImage" id="featuredImage" class="form-control">
</div>
<div class="form-group form-check">
    <input type="checkbox" name="published" id="published" class="form-check-input" <%= article.published ? 'checked' : '' %>>
    <label for="published" class="form-check-label">Published</label>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>